{
  "extends": "@tsconfig/node14/tsconfig.json",
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 12",
  "compilerOptions": {
    "lib": ["DOM"],
    "module": "commonjs",
    "target": "es2019",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./server",
    "moduleResolution": "node",
    "sourceMap": true,
    "noImplicitAny": false
  },
  "compileOnSave": true,
  "exclude": ["./src/client"],
  "include": ["./src/server"]
}
